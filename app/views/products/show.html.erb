<%= render "/shared/header" %>
<div class="container-form">
  <h1>Products#show</h1>
  <p>Find me in app/views/products/show.html.erb</p>
  <div class="form-feedback">
    <%= simple_form_for [@product, @feedback] do |f| %>
      <%= f.input :comment %>
      <%= f.input :average_durability %>
      <div class="input-group mb-3">
        <input type="file" class="form-control" id="inputGroupFile02">
        <label class="input-group-text" for="inputGroupFile02">Upload</label>
      </div>
      <%= f.submit "Submit review", class:"btn-light-green"%>
    <% end %>
  </div>
  <div class="show-feedback">
    <h2>Your feedbacks</h2>
    <% @feedbacks.each do |feedback|%>
      <li><%= feedback.comment%>
          <%= feedback.average_durability%>
      </li>
    <% end %>
  </div>
</div>
